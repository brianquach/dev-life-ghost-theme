<div class="posts-wrapper">
  {{!-- This is the post loop - each post will be output using this markup --}}
  {{#foreach posts}}
  <article class="{{post_class}} post-card">
    {{#if image}}
    <section>
      <img src={{image}} class="post-card-image" alt="{{title}}'s post cover image" />
    </section>
    {{/if}}
    <section class="post-card-body">
      <header class="post-card-header">
        <h2 class="post-card-title">
          <a href="{{url}}">{{title}}</a>
        </h2>
      </header>
      <section class="post-card-meta">
        <time class="post-card-date icon-calendar" datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="DD MMMM YYYY"}}
        </time>
      </section>
      <section class="post-card-excerpt">
        <p>
          {{excerpt words="26"}}<a class="read-more" href="{{url}}">&hellip;</a>
          <br>
          <a class="read-more" href="{{url}}">Read More</a>
        </p>
      </section>
      <footer class="post-card-meta">
        {{tags prefix='<i class="icon-tags"></i> '}}
      </footer>
    </section>
  </article>
  {{/foreach}}
</div>

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
