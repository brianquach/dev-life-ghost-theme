{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
  <div class="col-1">
    <article class="{{post_class}} post-card">
      <section class="post-card-meta content">
        <time class="post-card-date icon-calendar" datetime="{{date format="YYYY-MM-DD"}}">
          {{date format="DD MMMM YYYY"}}
        </time>
        &nbsp;{{tags prefix='<i class="icon-tags"></i> ' limit="1"}}
      </section>

      {{#if image}}
      <div class="post-card-image" style="background-image: url({{image}})">
      </div>
      {{/if}}

      <header class="post-card-header content">
        <h2 class="post-card-title">
          <a href="{{url}}">{{title}}</a>
        </h2>
      </header>
      <section class="post-card-excerpt content">
        <p>
          {{excerpt words="26"}}<a href="{{url}}">&hellip;</a>
        </p>
      </section>
      <footer class="content">
        <a class="read-more" href="{{url}}">Read More</a>
      </footer>
    </article>
  </div>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
<div class="col-3">
{{pagination}}
</div>
